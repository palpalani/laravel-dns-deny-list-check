{
    "name": "palpalani/laravel-dns-deny-list-check",
    "type": "library",
    "description": "A modern Laravel package for checking IP addresses against verified DNS-based blacklists (DNSBL/RBL) to ensure email deliverability",
    "keywords": [
        "laravel",
        "laravel-package",
        "dnsbl",
        "rbl",
        "dns-blacklist",
        "dns-deny-list",
        "email-deliverability",
        "spam-protection",
        "ip-blacklist",
        "ipv4",
        "ipv6",
        "email-reputation",
        "smtp",
        "dns-query",
        "blacklist-check"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "palPalani",
            "email": "palani.p@gmail.com",
            "role": "Developer",
            "homepage": "https://github.com/palpalani"
        }
    ],
    "homepage": "https://github.com/palpalani/laravel-dns-deny-list-check",
    "support": {
        "issues": "https://github.com/palpalani/laravel-dns-deny-list-check/issues",
        "source": "https://github.com/palpalani/laravel-dns-deny-list-check",
        "docs": "https://github.com/palpalani/laravel-dns-deny-list-check#readme"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/palpalani"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^11.0 || ^12.0",
        "spatie/laravel-package-tools": "^1.1"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^9.0.0 || ^10.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "suggest": {
        "ext-intl": "For better internationalization support",
        "ext-curl": "For alternative HTTP-based DNSBL checks (if needed)"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "palPalani\\DnsDenyListCheck\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "palPalani\\DnsDenyListCheck\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "extra": {
        "laravel": {
            "aliases": {
                "DnsDenyListCheck": "palPalani\\DnsDenyListCheck\\DnsDenyListCheckFacade"
            },
            "providers": [
                "palPalani\\DnsDenyListCheck\\DnsDenyListCheckServiceProvider"
            ]
        }
    },
    "scripts": {
        "analyse": [
            "@php vendor/bin/phpstan analyse"
        ],
        "format": [
            "@php vendor/bin/pint --parallel"
        ],
        "format:test": [
            "@php vendor/bin/pint --test --parallel"
        ],
        "test": [
            "@php vendor/bin/pest"
        ],
        "test:coverage": [
            "@php vendor/bin/pest --coverage"
        ],
        "test:unit": [
            "@php vendor/bin/pest --filter Unit"
        ],
        "check": [
            "@php vendor/bin/pint --test",
            "@php vendor/bin/phpstan analyse",
            "@php vendor/bin/pest"
        ],
        "post-autoload-dump": [
            "@php -r \"if (file_exists('vendor/phpstan/phpstan/phpstan.phar')) { echo 'PHPStan is installed\\n'; }\""
        ],
        "post-install-cmd": [
            "@php -r \"if (file_exists('vendor/laravel/pint/bin/pint')) { echo 'Laravel Pint is installed\\n'; }\""
        ]
    },
    "scripts-descriptions": {
        "analyse": "Run PHPStan static analysis",
        "format": "Fix code style with Laravel Pint (parallel)",
        "format:test": "Test code style without fixing",
        "test": "Run Pest test suite",
        "test:coverage": "Run tests with coverage report",
        "test:unit": "Run unit tests only",
        "check": "Run all quality checks (code style, static analysis, tests)"
    }
}
